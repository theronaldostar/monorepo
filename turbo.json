{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.local", ".env", "tsconfig.json"],
	"globalEnv": ["DB_HOST", "DB_NAME", "DB_USER", "DB_PASSWORD", "SERVER_PORT"],
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**"]
		},
		"lint": {
			"dependsOn": ["^build"]
		},
		"check-types": {},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"clean": {
			"cache": false
		}
	}
}
